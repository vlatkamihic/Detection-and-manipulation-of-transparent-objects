<launch>
  <include file="$(find realsense2_camera)/launch/rs_camera.launch">
     <arg name="enable_pointcloud" value="true" />
     <arg name="depth_width" value="640" />
     <arg name="depth_height" value="480" />
     <arg name="depth_fps" value="15" />
     <arg name="color_width" value="640" />
     <arg name="color_height" value="480" />
     <arg name="color_fps" value="15" />
     <arg name="align_depth" value="true" />
  </include>
  <node pkg="cleargrasp" name="check_current_phase_server" type="handle_experiment.py" output="screen"/>
  <node pkg="cleargrasp" name="live_demo_node" type="live_demo.py" output="screen"/>
  <node pkg="cleargrasp" name="get_center_and_dimensions" type="get_center_and_dimensions.py" output="screen"/>
</launch>